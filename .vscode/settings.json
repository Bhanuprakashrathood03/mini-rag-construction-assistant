{
  // ✅ Always use your virtual environment
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // ✅ Make VS Code recognize local imports like "from src.query_engine import ..."
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],

  // ✅ Enable better import autocomplete & type detection
  "python.analysis.autoImportCompletions": true,
  "python.analysis.useLibraryCodeForTypes": true,

  // ✅ Turn off type errors that don't matter
  "python.analysis.typeCheckingMode": "off",

  // ✅ Optional: auto format with black (recommended)
  "editor.formatOnSave": true,
  "python.formatting.provider": "black"
}
